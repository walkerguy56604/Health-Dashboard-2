name: Update Live Readings

on:
  push:
    paths:
      - 'readings-latest.json'

jobs:
  update-json:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Copy latest readings to live
        run: |
          cp readings-latest.json readings-live.json

      - name: Commit and push updates
        run: |
          git config --local user.name "github-actions[bot]"
          git config --local user.email "github-actions[bot]@users.noreply.github.com"
          git add readings-live.json
          git commit -m "Update live readings via GitHub Actions"
          git push
